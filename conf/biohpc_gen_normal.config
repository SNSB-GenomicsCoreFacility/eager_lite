process {
    executor = "slurm"
    queue = "biohpc_gen_normal"
    queuesize = 10
    submitRateLimit = '1 sec'
    beforeScript = 'module load /dss/dsshome1/lxc03/ru83ced/modules/afq2bam_env'
    resourceLimits = [
        time  : 48.h
    ]
}


env {
    SLURM_CLUSTERS='biohpc_gen'
    NXF_OPTS='-Xms256m -Xmx2g -XX:MaxRAMPercentage=25'
}

timeline {
    enabled = true
    file = "timeline.html"
}

trace {
    enabled = true
    file = "trace.txt"
}
