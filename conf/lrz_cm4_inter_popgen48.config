executor {
    name = 'flux'
}

process{
        beforeScript = 'module load /dss/dssfs03/u8401/u8401-dss-0001/modules/afq2bam_env'
        resourceLimits = [
            memory: 96.GB,
            cpus  : 112,
            time  : 8.h
        ]
}

env {
    NXF_OPTS='-Xms256m -Xmx2g -XX:MaxRAMPercentage=25'
}

timeline {
    enabled = true
    file = "timeline.html"
}

trace {
    enabled = true
    file = "trace.txt"
}
