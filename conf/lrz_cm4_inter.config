executor {
    name = 'flux'
}

process{
        beforeScript = 'module load /dss/dssfs02/pn29qe/pn29qe-dss-0000/workflows/nextflow/modules/afq2bam_env'
        resourceLimits = [
            memory: 96.GB,
            cpus  : 112,
            time  : 8.h
